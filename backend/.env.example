# Server
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/nft-project

# Blockchain
CONTRACT_ADDRESS=0x...
CHAIN_ID=1
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=your_private_key_for_signing

# IPFS (Pinata)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt

# NFT.Storage (alternative to Pinata)
NFT_STORAGE_API_KEY=your_nft_storage_key

# Price Feed
COINGECKO_API_KEY=optional_for_higher_rate_limits

# Payment Gateway (optional for BTC/multi-crypto)
BTCPAY_SERVER_URL=https://your-btcpay-server.com
BTCPAY_API_KEY=your_btcpay_api_key

# Security
JWT_SECRET=your_jwt_secret_for_api_auth
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
